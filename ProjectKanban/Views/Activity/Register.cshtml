@using ProjectKanban.Dto
@model ActivityRegisterDTO



<div class="container mt-5">
    
    <form asp-action="Register" asp-controller="Activity" method="post">

        <div class="mb-3">
            <label class="form-label">Titulo</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <select 
                asp-for="StatusId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Status,"Id","Nome"))"
            >
            </select>
        </div>


            <div class="d-flex">
                <button type="submit" class="btn btn-info w-50">Cadastrar</button>
                <a class="btn btn-info w-50 mx-2" asp-action="Index" asp-controller="Activity">Voltar</a>
            </div>


    </form>

</div>